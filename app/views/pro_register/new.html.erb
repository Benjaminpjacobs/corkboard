<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Create your account</h1>
    </div>
  </div>
  <div class="form-signin">
    <%= form_for(@pro, url: pro_register_path, method: :post) do |f| %>
      <%= f.text_field :first_name, placeholder: "First Name", id: "first_name"%>
      <%= f.text_field :last_name, placeholder: "Last Name", id: "last_name"%>
      <%= f.text_field :zipcode, placeholder: 'Enter Zip Code', id: "zip_code"%>
      <%= f.text_field :phone_number, placeholder: 'Enter Phone Number', id: "phone_number"%>
      <%= f.text_field :email, placeholder: "Email", id: "email"%>
      <%= f.text_field :service, value: @service.name, readonly: true %>
      <%= f.password_field :password, placeholder: "Password" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
      <%= f.submit "Create Account", class: "btn login btn-primary" %>
    <%end%>

    <%= link_to "Sign Up With Facebook", facebook_login_path %>
  </div>
</div>
