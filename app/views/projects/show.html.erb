<div class='container'>
  <div class="row">
    <div class="col-md-4 col-md-offset-2 project">
      <%= render partial: 'shared/project_information'%>
    </div>
    <div class="col-md-4 bid">
      <h2>Bids:</h2>
      <ul class="list-group open">
        <%@project.bids.each do |bid|%>
          <%= link_to bid_path(bid) do%>
            <li class="list-group-item">
              <h4 class="list-group-item-heading">
                <%=bid.pro.first_name%>
                <%=bid.pro.last_name%>
              </h4>
              <p>Quote: <%=bid.amount%></p>
              <p>Comments: <%=bid.comment%></p>
              <p>Status: <%=bid.status%></p>
            </li>
          <%end%>
        <%end%>
      </ul>
    </div>
    <div class="col-md-4 col-md-offset-2 project">
      <%= render partial: 'projects/reviews' %>
      <%= render partial: 'reviews/form' %>
    </div>
  </div>
</div>