<% if @project.review.id.nil? %>
  <%= form_for [ @project, @review ] do |f| %>
  <%= f.hidden_field :user_id, value: @project.bids.find_by(status: "accepted").user_id %>
      <p>
        Overall Rating:
        <span class="star-rating">
        <%= f.radio_button :rating, '1' %><i></i>
        <%= f.radio_button :rating, '2' %><i></i>
        <%= f.radio_button :rating, '3' %><i></i>
        <%= f.radio_button :rating, '4' %><i></i>
        <%= f.radio_button :rating, '5' %><i></i>
        </span>
    </p>
    <p>
      <%= f.label :comment, "Your comment" %><br/>
      <%= f.text_area :comment %>
    </p>
    <p>
      <%= f.submit 'Submit' %>
    </p>
  <% end %>
<% end %>